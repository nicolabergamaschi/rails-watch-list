<div class="d-flex flex-column justify-content-center align-items-center mt-5">
  <h3 class="mb-4 text-center">Add a movie to <%= @list.name %></h3>
  <div class="d-flex flex-column w-40 bg-light p-5 rounded shadow">
    <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, collection: @movies, prompt: "Select a movie" %>
      <%= f.input :comment, placeholder: "Add your comment here...", input_html: { rows: 5 } %>
      <%= f.button :submit, "Add bookmark", class: "btn btn-primary mt-5 w-100" %>
    <% end %>
    <%= link_to "Back to list", list_path(@list), class: "btn btn-secondary mt-4" %>
  </div>
</div>
