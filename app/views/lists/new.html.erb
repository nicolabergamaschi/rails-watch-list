<div class="d-flex flex-column justify-content-center align-items-center mt-5">
  <h3 class="mb-4 text-center">Add a movie to <%= @list.name %></h3>
  <div class="d-flex flex-column w-40 bg-light p-5 rounded shadow">
    <%= simple_form_for @list do |f| %>
      <%= f.input :name, placeholder: "Insert list new name..." %>
      <%= f.input :img_url, placeholder: "Insert backdrop image url..." %>
      <%= f.button :submit, "Add List", class: "btn btn-primary mt-5 w-100" %>
    <% end %>
    <%= link_to "Back to home", root_path, class: "btn btn-secondary mt-4" %>
  </div>
  <% @lists.each do |list| %>
    <%= list.name %>
  <% end %>
</div>
